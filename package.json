{
  "name": "mern",
  "version": "1.0.0",
  "description": "Mern Demo",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "server": "nodemon server.js",
    "reset-local-db": "NODE_ENV=test mysql -uroot -e \"drop schema if exists database_test; create schema database_test;\" -p database_test && node config/seeddb.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "express": "^4.16.3",
    "express-session": "^1.16.2",
    "filepond": "^4.4.12",
    "filepond-plugin-image-exif-orientation": "^1.0.6",
    "filepond-plugin-image-preview": "^4.3.3",
    "firebase": "^6.3.4",
    "firebase-app": "0.0.1",
    "if-env": "^1.0.4",
    "materialize": "^1.0.0",
    "materialize-css": "^1.0.0-rc.2",
    "moment": "^2.29.4",
    "mysql": "^2.17.1",
    "mysql2": "^1.6.5",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "prop-types": "^15.7.2",
    "react-avatar-edit": "^0.8.3",
    "react-filepond": "^7.0.1",
    "react-image-lightbox": "^5.1.0",
    "react-images": "^1.0.0",
    "react-images-upload": "^1.2.7",
    "react-materialize": "^3.3.4",
    "react-moment": "^0.9.2",
    "react-photo-gallery": "6.2.1",
    "react-router": "^5.0.1",
    "react-sizeme": "^2.6.7",
    "react-stack-grid": "^0.7.1",
    "sequelize": "^5.12.3",
    "session": "^0.1.0",
    "shortid": "^2.2.14",
    "twilio": "^3.33.3"
  }
}
